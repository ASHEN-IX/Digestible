# Phase 0 Environment Variables
# Copy this file to .env and fill in your values

# Database (Neon Postgres) - For both FastAPI and Django
DATABASE_URL=postgresql+asyncpg://user:password@host/database?sslmode=require

# Django Database (separate from FastAPI if needed)
# DATABASE_NAME=digestible
# DATABASE_USER=postgres
# DATABASE_PASSWORD=password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1

# FastAPI Settings
ENVIRONMENT=development
APP_NAME=Digestible

# Pipeline Settings
MAX_CONTENT_LENGTH=1000000
CHUNK_SIZE=1000
MAX_CHUNKS=50

# API
API_HOST=0.0.0.0
API_PORT=8000

# FastAPI URL (for Django to communicate with FastAPI)
FASTAPI_URL=http://localhost:8000
