# Production Environment Configuration
# Uses Neon serverless PostgreSQL and production Redis

# Database (Neon Postgres - REPLACE WITH YOUR ACTUAL CREDENTIALS)
DATABASE_URL=postgresql+asyncpg://[username]:[password]@[host]/[database]?sslmode=require

# Redis (Production Redis - REPLACE WITH YOUR ACTUAL CREDENTIALS)
# If using local Redis for now, keep this:
REDIS_URL=redis://redis:6379/0

# Django Database (uses Neon PostgreSQL)
# Extract these from your DATABASE_URL above
DATABASE_NAME=[database]
DATABASE_USER=[username]
DATABASE_PASSWORD=[password]
DATABASE_HOST=[host]
DATABASE_PORT=5432

# Django Settings
DJANGO_SECRET_KEY=[generate-a-strong-secret-key]
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1,your-production-domain.com

# FastAPI Settings
ENVIRONMENT=production
APP_NAME=Digestible
DEBUG=false

# Pipeline Settings
MAX_CONTENT_LENGTH=1000000
CHUNK_SIZE=1000
MAX_CHUNKS=50

# API
API_HOST=0.0.0.0
API_PORT=8000

# FastAPI URL (for Django to communicate with FastAPI)
FASTAPI_URL=http://backend:8000
