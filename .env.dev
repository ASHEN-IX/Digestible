# Development Environment Configuration
# Uses local Docker services (PostgreSQL, Redis)

# Database (Local PostgreSQL via Docker Compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/digestible

# Redis (Local via Docker Compose)
REDIS_URL=redis://redis:6379/0

# Django Database (uses same local PostgreSQL)
DATABASE_NAME=digestible
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432

# Django Settings
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# FastAPI Settings
ENVIRONMENT=development
APP_NAME=Digestible
DEBUG=true

# Pipeline Settings
MAX_CONTENT_LENGTH=1000000
CHUNK_SIZE=1000
MAX_CHUNKS=50

# API
API_HOST=0.0.0.0
API_PORT=8000

# FastAPI URL (for Django to communicate with FastAPI)
FASTAPI_URL=http://backend:8000
